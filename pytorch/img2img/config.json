{
    "experiment_data": null,
    "device": "cuda",

    "augmentation":{
        "rotation_range": 7,
        "width_shift_range": 0.05,
        "height_shift_range": 0.05,
        "zoom_range": 0.1,
        "horizontal_flip": true,
        "vertical_flip": true,
        "noise_limit": 3,
        "rotate_90": 0.5,
        "fill_mode": 0
    },

    "save_inform": {
        "save_to_dir":       null,
        "save_prefix_image": "image_",
        "save_prefix_mask":  "mask_",
        "save_prefix_model": "",
        "save_suffix_model": ""
    },

    "data_info": {
		"common_dir_path": "img2img/data/cutting data/",
        "dir_img_name":     "low_quality",
        "add_mask_prefix": "",
        "proportion_of_dataset": 1
    },

    "model" : {
		"experiment_type": "img2img",
        "type_model": "tiny_unet_v3",
        "last_activation": "sigmoid_activation"
    },

    "train": {
        "mask_name_label_list": ["output"],
        "num_class": 1,
        "batch_size": 7,
        "num_epochs": 100,
        "optimizer": "Adam",
        "loss": "MSELoss",
        "lr_scheduler": "standart",
        "seed": 42
    },


    "img_transform_data": {
        "color_mode_img": "gray",
        "mode_mask": "image",
        "target_size": [256, 256]
    },

    "generator_config": {
        "type_gen": "all_reader",
        "augment": true,
        "tailing": false,
        "shuffle": true,
        "mode": "train",
        "seed": 5,
        "subsampling": "random",
        "share_validat": 0.2
    },

    "debug_mode": false,
    "move_to_date_folder": true
}
